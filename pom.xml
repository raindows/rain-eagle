	<build>
		<plugins>

			<!-- https://www.eclipse.org/jetty/download.html -->
			<!-- https://www.eclipse.org/jetty/documentation/current/jetty-maven-plugin.html -->
			<!-- mvn jetty:run -Djetty.port=8081 -->
			<plugin>
